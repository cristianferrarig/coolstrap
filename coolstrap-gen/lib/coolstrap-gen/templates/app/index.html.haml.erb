= content_for :title do
  <%= app_name %>

= content_for :application_styles do
  = stylesheet_link_tag "coolstrap/themes/coolstrap"
  = stylesheet_link_tag "customtheme.css"

= content_for :principal do
  %div{"role" => "main"}
    
    -# load your sections here
    = partial "views/home"

  = partial "views/shared/aside_onleft"
  = partial "views/shared/aside_onright"
  = partial "views/shared/aside_ontop"
  = partial "views/shared/aside_onbottom"


= content_for :application_js do
  = javascript_include_tag "app.js"